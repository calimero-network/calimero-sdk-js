{
  "name": "calimero-sdk-js",
  "version": "0.1.0",
  "description": "JavaScript SDK for building Calimero P2P applications",
  "private": true,
  "scripts": {
    "build": "pnpm --filter '@calimero-network/calimero-sdk-js' --filter '@calimero-network/calimero-cli-js' build",
    "test": "pnpm -r --if-present test",
    "test:unit": "cd tests/unit && pnpm test",
    "test:integration": "cd tests/integration && pnpm test",
    "test:e2e": "cd tests/e2e && pnpm test",
    "test:workflows": "bash scripts/test-workflows.sh",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "lint:fix:all": "pnpm lint:fix && pnpm format",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "keywords": [
    "calimero",
    "p2p",
    "crdt",
    "wasm",
    "quickjs",
    "blockchain",
    "distributed"
  ],
  "author": "Calimero Network",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/calimero-network/calimero-sdk-js.git"
  },
  "bugs": {
    "url": "https://github.com/calimero-network/calimero-sdk-js/issues"
  },
  "homepage": "https://github.com/calimero-network/calimero-sdk-js#readme",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@semantic-release/exec": "^7.0.0",
    "conventional-changelog-conventionalcommits": "^7.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
